# Docker Environment Variables
# Copy this to .env.local and update with your actual values

# Database
DATABASE_URL="postgresql://outleads_user:outleads_secure_password@postgres:5432/outleads?schema=public"
DB_PASSWORD="outleads_secure_password"

# Redis
REDIS_URL="redis://:redis_secure_password@redis:6379"
REDIS_PASSWORD="redis_secure_password"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-change-this"
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-too"

# Application
NODE_ENV="production"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
PORT="3000"

# Email (if using)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# Optional: Monitoring
SENTRY_DSN=""
ANALYTICS_ID=""
