datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// SBU model for business units
model Sbu {
  id       String       @id @default(cuid())
  name     String       @unique
  users    User[]
  products SbuProduct[]
}

// User model update
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  name      String
  role      Role
  status    Status    @default(PENDING)
  sbuId     String?
  sbu       Sbu?      @relation(fields: [sbuId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastLogin DateTime?
  campaigns Campaign[]
}

// Product model with sub-products
model Product {
  id          String    @id @default(cuid())
  name        String
  description String?
  category    String    @default("finance")
  sbus        SbuProduct[]
  leads       Lead[]

  // Self-referencing relationship for sub-products
  parentId    String?
  parent      Product?  @relation("SubProducts", fields: [parentId], references: [id])
  subProducts Product[] @relation("SubProducts")

  @@unique([name, parentId])
}

// Linking table for SBU and Product relationship
model SbuProduct {
  sbu       Sbu     @relation(fields: [sbuId], references: [id])
  sbuId     String
  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@id([sbuId, productId])
}

model Sector {
  id    String @id @default(cuid())
  name  String @unique
  leads Lead[]
}

model Lead {
  id             String    @id @default(cuid())
  fullName       String
  email          String?
  phoneNumber    String
  sectorId       String
  businessSector Sector    @relation(fields: [sectorId], references: [id])
  campaignId     String?
  campaign       Campaign? @relation(fields: [campaignId], references: [id])
  products       Product[]
  createdAt      DateTime  @default(now())
  status         LeadStatus @default(NEW)
}

enum LeadStatus {
  NEW
  INTERESTED
  CONTACTED
  QUALIFIED
  CONVERTED
}

model Campaign {
  id           String   @id @default(cuid())
  name         String
  companyName  String?
  description  String?
  uniqueLink   String   @unique
  startDate    DateTime?
  endDate      DateTime?
  budget       Float?
  leads        Lead[]
  createdAt    DateTime @default(now())
  createdBy    User     @relation(fields: [createdById], references: [id])
  createdById  String
}

// Roles enum (unchanged)
enum Role {
  ADMIN
  BSS
  INFOSEC
  AGENT
  SUPERVISOR
}

// Status enum (unchanged)
enum Status {
  PENDING
  ACTIVE
  INACTIVE
}

